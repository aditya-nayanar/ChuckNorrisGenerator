<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/bGenerate"
        android:layout_width="182dp"
        android:layout_height="70dp"
        android:layout_marginTop="288dp"
        android:background="#5F8FE1"
        android:text="Generate"
        app:layout_constraintEnd_toEndOf="@+id/jokeText"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/jokeText"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/jokeText"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bAddToFav"
        android:layout_width="0dp"
        android:layout_height="51dp"
        android:layout_marginBottom="12dp"
        android:background="#6CD7F3"
        android:text="Add to Favourites"
        app:layout_constraintBottom_toTopOf="@+id/bGenerate"
        app:layout_constraintEnd_toEndOf="@+id/bGenerate"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bGenerate" />

    <TextView
        android:id="@+id/loadingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading..."
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/bAddToFav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jokeText" />

</androidx.constraintlayout.widget.ConstraintLayout>